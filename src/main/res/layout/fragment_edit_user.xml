<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seem.android.fragments.EditUserFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/email"
        android:layout_alignRight="@+id/bio"
        android:layout_alignEnd="@+id/bio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/followbutton"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:src="@drawable/user_profile_nophoto"
        android:layout_gravity="center_horizontal|top"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint="John Doe"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:textStyle="bold" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bio"
        android:hint="I am a cool dude!"
        android:textSize="12sp"
        android:layout_below="@+id/username"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageView" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:hint="john.doe@coolestguy.com"
        android:layout_below="@+id/bio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:hint="johndoe"
        android:textSize="12sp"
        android:textColor="#555"
        android:layout_alignTop="@+id/atText"
        android:layout_toRightOf="@+id/atText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/atText"
        android:text="\@"
        android:layout_toRightOf="@+id/imageView"
        android:layout_below="@+id/name"
        android:gravity="center|center_vertical"
        android:textColor="#555"
        android:paddingTop="6dp" />

</RelativeLayout>
