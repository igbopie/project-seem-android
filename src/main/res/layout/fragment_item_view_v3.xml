<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:background="#000">




    <GridView
        android:background="#E8E8E8"
        android:id="@+id/gridview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="3"
        android:padding="0dp"
        android:layout_below="@id/itemMainImage"
        />

    <View
        android:id="@+id/gridviewmask"
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/itemMainImage"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/fakeItemMainImage"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/itemMainImageLowRes"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"/>
    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:id="@+id/itemMainImage"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>
    <RelativeLayout
        android:id="@+id/bigActionPanel"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/itemMainImage"
        android:background="#77000000"
        >
        <com.seem.android.customviews.RoundedImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user_profile_nophoto"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/userImageBig" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ignacio Bona"
            android:id="@+id/nameBig"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/userImageBig" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@igbopie"
            android:id="@+id/usernameBig"
            android:textColor="#aaa"
            android:layout_below="@+id/nameBig"
            android:layout_toRightOf="@+id/userImageBig" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caption"
            android:id="@+id/captionBig"
            android:textColor="#fff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/thumbUpIconBig"
            android:layout_below="@+id/usernameBig" />
        <ImageView
            android:layout_width="@dimen/fullscreen_topbar_icon"
            android:layout_height="@dimen/fullscreen_topbar_icon"
            android:id="@+id/thumbUpIconBig"
            android:src="@drawable/thumbs_o_up"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:id="@+id/thumbsUpScoreBig"
            android:layout_alignTop="@+id/thumbUpIconBig"
            android:layout_toRightOf="@+id/thumbUpIconBig"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="#fff" />

        <ImageView
            android:layout_width="@dimen/fullscreen_topbar_icon"
            android:layout_height="@dimen/fullscreen_topbar_icon"
            android:id="@+id/thumbDownIconBig"
            android:src="@drawable/thumbs_o_down"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/thumbsUpScoreBig"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:id="@+id/thumbsDownScoreBig"
            android:layout_alignTop="@+id/thumbDownIconBig"
            android:layout_toRightOf="@+id/thumbDownIconBig"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="#fff" />

        <ImageView
            android:layout_width="@dimen/fullscreen_topbar_icon"
            android:layout_height="@dimen/fullscreen_topbar_icon"
            android:id="@+id/favIconBig"
            android:src="@drawable/star_o"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/thumbsDownScoreBig"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:id="@+id/favsScoreBig"
            android:layout_alignTop="@+id/favIconBig"
            android:layout_toRightOf="@+id/favIconBig"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 min"
            android:id="@+id/dateBig"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="@dimen/fullscreen_topbar_icon"
            android:layout_height="@dimen/fullscreen_topbar_icon"
            android:id="@+id/commentsIconBig"
            android:src="@drawable/comments"

            android:layout_toLeftOf="@+id/commentsNumberBig"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:id="@+id/commentsNumberBig"

            android:layout_alignTop="@+id/commentsIconBig"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="#fff" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/miniActionPanel"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/itemMainImage"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caption"
            android:id="@+id/captionSmall"
            android:layout_below="@+id/usernameSmall"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@igbopie"
            android:id="@+id/usernameSmall"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 min"
            android:id="@+id/dateSmall"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:textColor="#777" />

        <ImageView
            android:layout_width="@dimen/fullscreen_topbar_icon"
            android:layout_height="@dimen/fullscreen_topbar_icon"
            android:id="@+id/thumbUpIconSmall"
            android:src="@drawable/thumbs_o_up_black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:id="@+id/thumbsUpScoreSmall"
            android:layout_alignTop="@+id/thumbUpIconSmall"
            android:layout_toRightOf="@+id/thumbUpIconSmall"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>

        <ImageView
            android:layout_width="@dimen/fullscreen_topbar_icon"
            android:layout_height="@dimen/fullscreen_topbar_icon"
            android:id="@+id/thumbDownIconSmall"
            android:src="@drawable/thumbs_o_down_black"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/thumbsUpScoreSmall"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:id="@+id/thumbsDownScoreSmall"
            android:layout_alignTop="@+id/thumbDownIconSmall"
            android:layout_toRightOf="@+id/thumbDownIconSmall"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>

        <ImageView
            android:layout_width="@dimen/fullscreen_topbar_icon"
            android:layout_height="@dimen/fullscreen_topbar_icon"
            android:id="@+id/favIconBigSmall"
            android:src="@drawable/star_o_black"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/thumbsDownScoreSmall"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:id="@+id/favsScoreSmall"
            android:layout_alignTop="@+id/favIconBigSmall"
            android:layout_toRightOf="@+id/favIconBigSmall"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>


     </RelativeLayout>



</RelativeLayout>