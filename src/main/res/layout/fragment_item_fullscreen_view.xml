<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:padding="0dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/captionTextView"
        android:textColor="#fff"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/cameraButton"
        android:layout_marginTop="0dp"
        android:layout_alignTop="@+id/componentImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_action_reply"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/repliesIndicator"
        android:src="@drawable/replies"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/cameraButton"
        android:shadowDx="0"
        android:shadowDy="0"
        android:alpha=".8"
        android:shadowRadius="3"/>
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/repliesIndicatorNumber"
        android:text="0"
        android:gravity="center"
        android:textColor="#000"
        android:shadowColor="#fff"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"

        android:paddingEnd="9dp"
        android:paddingTop="9dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/cameraButton" />

</RelativeLayout>
