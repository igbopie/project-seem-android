<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:padding="0dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#66000000"
        android:id="@+id/topBar"
    >


        <com.seem.android.mockup1.customviews.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Close"
            android:src="@drawable/timescircleobig"
            android:id="@+id/closeIconTextView"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"

            android:layout_marginTop="0dp"
            android:layout_alignTop="@+id/componentImageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            >

            <ImageView
                android:layout_width="@dimen/fullscreen_topbar_icon"
                android:layout_height="fill_parent"
                android:src="@drawable/star_o"
                android:id="@+id/favActionImageView"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="@dimen/fullscreen_topbar_icon"
                android:layout_height="fill_parent"
                android:src="@drawable/thumbs_o_up"
                android:id="@+id/thumbUpIconView"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="@dimen/fullscreen_topbar_icon"
                android:layout_height="fill_parent"
                android:src="@drawable/thumbs_o_down"
                android:id="@+id/thumbDownIconView"
                android:layout_marginRight="10dp"/>


            <ImageView
                android:layout_width="@dimen/fullscreen_topbar_icon"
                android:layout_height="fill_parent"
                android:id="@+id/cameraButton"
                android:layout_marginRight="10dp"
                android:src="@drawable/replybig"/>

            <ImageView
                android:layout_width="@dimen/fullscreen_topbar_icon"
                android:layout_height="fill_parent"
                android:id="@+id/shareActionImageView"
                android:layout_marginRight="10dp"
                android:src="@drawable/share"/>

        </LinearLayout>







    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#66000000"
        android:layout_marginBottom="40dp"

        android:id="@+id/userBar"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <com.seem.android.mockup1.customviews.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="igbopie"
                android:src="@drawable/userbig"
                android:id="@+id/userIconTextView"
                android:layout_marginRight="@dimen/fullscreen_bottonbar_icon_margin"
                />

            <com.seem.android.mockup1.customviews.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:src="@drawable/folderopenbig"
                android:id="@+id/depthIconTextView"
                android:layout_marginRight="@dimen/fullscreen_bottonbar_icon_margin"
                />

            <com.seem.android.mockup1.customviews.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:src="@drawable/replybig"
                android:id="@+id/replyIconTextView"
                android:layout_marginRight="@dimen/fullscreen_bottonbar_icon_margin"
                />

            <com.seem.android.mockup1.customviews.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:src="@drawable/star"
                android:id="@+id/favouritesIconTextView"
                android:layout_marginRight="@dimen/fullscreen_bottonbar_icon_margin"
                />

            <com.seem.android.mockup1.customviews.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:src="@drawable/thumbs_up"
                android:id="@+id/thumbsUpIconTextView"
                android:layout_marginRight="@dimen/fullscreen_bottonbar_icon_margin"
                />
            <com.seem.android.mockup1.customviews.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:src="@drawable/thumbs_down"
                android:id="@+id/thumbsDownIconTextView"
                android:layout_marginRight="@dimen/fullscreen_bottonbar_icon_margin"
                />





            </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="5 hours ago"
            android:id="@+id/datePostedTextView"
            android:textColor="#ddd"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#66000000"
        android:id="@+id/captionBar"

    >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="Caption here"
            android:id="@+id/captionTextView"
            android:textColor="#fff"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>
     </RelativeLayout>








</RelativeLayout>








