<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seem.android.mockup1" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk android:minSdkVersion="14" />

    <application
        android:name="com.seem.android.mockup1.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/seem_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.seem.android.mockup1.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.seem.android.mockup1.activities.ItemActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.seem.android.mockup1.activities.ReplyFlowActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.seem.android.mockup1.activities.CreateSeemFlowActivity"
            android:label="Create Seem"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.seem.android.mockup1.activities.ItemsFullScreenActivity"
            android:label="FullScreen" >
        </activity>
        <activity
            android:name="com.seem.android.mockup1.activities.ThreadedViewActivity"
            android:label="Thread View"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
